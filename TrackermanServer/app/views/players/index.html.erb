<div class="container">

	<div class="sm-col-2">

	</div>

	<div class="sm-col-8">

		<div class="fbbluebox" style="width: 500px;">
			Here are all the recent players
		</div>

	  	<ul>
			<% @recent_players.each do |p| %>
				<li><%= link_to p.name, show_player_path(p) %></li>
			  	Login: <%= local_time(p.login_time,  format: '%Y-%m-%d  %H:%M:%S', class: 'my-time') %>
			<% end %>
	  	</ul>

	  <div class="fbbluebox" style="width: 500px;">
		Here are all the older players
	  </div>

	  <ul>
		<% @players.each do |p| %>
			<li><%= link_to p.name, show_player_path(p) %></li>
			Login: <%= local_time(p.login_time,  format: '%Y-%m-%d  %H:%M:%S', class: 'my-time') %>
			( <%= local_time_ago(p.login_time) %> )
		<% end %>
	  </ul>
	</div>

  <div class="sm-col-2">

  </div>

</div>

