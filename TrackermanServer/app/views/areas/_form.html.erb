<%= simple_nested_form_for(@area) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <% f.fields_for :zones do |builder|  %>
        <%= render "zones_fields", :f => builder %>
        <%= builder.link_to_remove "Remove" %>
  <% end %>
    <%= f.link_to_add "Add a Zone", :zones %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
